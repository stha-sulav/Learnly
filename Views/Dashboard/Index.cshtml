@model Learnly.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page"><i class="bi bi-speedometer2 me-1"></i>Dashboard</li>
        </ol>
    </nav>

    <h1>My Dashboard</h1>

    @if (Model.IsInstructor)
    {
        <!-- Instructor Dashboard -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header"><i class="bi bi-journals me-2"></i>Total Courses</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.TotalCreatedCourses</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header"><i class="bi bi-globe me-2"></i>Published</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.PublishedCourses</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header"><i class="bi bi-pencil me-2"></i>Drafts</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.DraftCourses</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header"><i class="bi bi-people me-2"></i>Total Students</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.TotalStudentsEnrolled</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-secondary mb-3">
                    <div class="card-header"><i class="bi bi-collection me-2"></i>Total Modules</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.TotalModulesCreated</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-header"><i class="bi bi-play-btn me-2"></i>Total Lessons</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.TotalLessonsCreated</h4>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="mt-5 mb-3">Quick Actions</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-plus-circle display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Create Course</h5>
                        <p class="card-text text-muted">Start creating a new course</p>
                        <a asp-area="Instructor" asp-page="/Courses/CourseEdit" class="btn btn-primary">
                            <i class="bi bi-arrow-right"></i> Create
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-collection-play display-4 text-success mb-3"></i>
                        <h5 class="card-title">My Courses</h5>
                        <p class="card-text text-muted">View and manage your courses</p>
                        <a asp-area="Instructor" asp-page="/Courses/CourseList" class="btn btn-success">
                            <i class="bi bi-arrow-right"></i> View Courses
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-person-circle display-4 text-info mb-3"></i>
                        <h5 class="card-title">My Profile</h5>
                        <p class="card-text text-muted">Manage your account settings</p>
                        <a asp-controller="Account" asp-action="Manage" class="btn btn-info">
                            <i class="bi bi-arrow-right"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.InstructorCourses.Any())
        {
            <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
                <h4 class="mb-0">Your Courses</h4>
                <a asp-area="Instructor" asp-page="/Courses/CourseList" class="btn btn-outline-primary btn-sm">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="row">
                @foreach (var course in Model.InstructorCourses.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="position-relative" style="height: 180px; background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-indigo) 100%);">
                                <div class="d-flex align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100">
                                    <i class="bi bi-play-circle text-white display-4"></i>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(course.ThumbnailPath))
                                {
                                    <img src="@course.ThumbnailPath" class="card-img-top position-absolute top-0 start-0 w-100 h-100" alt="@course.Title" style="object-fit: cover;" onerror="this.style.display='none';">
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">@course.Title</h5>
                                    <span class="badge @(course.IsPublished ? "bg-success" : "bg-warning text-dark")">
                                        @(course.IsPublished ? "Published" : "Draft")
                                    </span>
                                </div>
                                <div class="mb-2">
                                    @if (course.TotalReviews > 0)
                                    {
                                        <span class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(course.AverageRating))
                                                {
                                                    <i class="bi bi-star-fill" style="font-size: 0.85rem;"></i>
                                                }
                                                else if (i - 0.5 <= course.AverageRating)
                                                {
                                                    <i class="bi bi-star-half" style="font-size: 0.85rem;"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star" style="font-size: 0.85rem;"></i>
                                                }
                                            }
                                        </span>
                                        <span class="text-muted small ms-1">@course.AverageRating.ToString("0.0") (@course.TotalReviews)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small"><i class="bi bi-star me-1"></i>No reviews yet</span>
                                    }
                                </div>
                                <p class="card-text text-muted small flex-grow-1">@course.ShortDescription</p>
                                <div class="d-flex justify-content-between text-muted small mb-3 border-top pt-2">
                                    <span><i class="bi bi-collection me-1"></i>@course.ModuleCount Modules</span>
                                    <span><i class="bi bi-people me-1"></i>@course.EnrolledStudents Students</span>
                                </div>
                                <div class="mt-auto">
                                    <a asp-area="Instructor" asp-page="/Courses/CourseEdit" asp-route-id="@course.Id" class="btn btn-primary btn-sm d-block">
                                        <i class="bi bi-pencil-square me-1"></i> Edit Course
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info mt-5" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                You haven't created any courses yet.
                <a asp-area="Instructor" asp-page="/Courses/CourseEdit" class="alert-link">Create your first course</a> to get started!
            </div>
        }
    }
    else
    {
        <!-- Student Dashboard -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Enrolled Courses</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.TotalEnrolledCourses</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Completed Courses</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.CompletedCourses</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">In Progress</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.InProgressCourses</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Lessons Completed</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.TotalLessonsCompleted</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-secondary mb-3">
                    <div class="card-header">Overall Progress</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.OverallProgress%</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">Certificates Earned</div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.CertificatesEarned</h4>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="mt-5 mb-3">Quick Actions</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-search display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Browse Courses</h5>
                        <p class="card-text text-muted">Discover new courses to learn</p>
                        <a asp-page="/Courses/Index" class="btn btn-primary">
                            <i class="bi bi-arrow-right"></i> Browse
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-bookmark-check display-4 text-success mb-3"></i>
                        <h5 class="card-title">Enrolled Courses</h5>
                        <p class="card-text text-muted">Continue learning where you left off</p>
                        <a asp-page="/Courses/Enrolled" class="btn btn-success">
                            <i class="bi bi-arrow-right"></i> View Enrolled
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-person-circle display-4 text-info mb-3"></i>
                        <h5 class="card-title">My Profile</h5>
                        <p class="card-text text-muted">Manage your account settings</p>
                        <a asp-controller="Account" asp-action="Manage" class="btn btn-info">
                            <i class="bi bi-arrow-right"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.EnrolledCourses.Any())
        {
            <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
                <h4 class="mb-0">Continue Learning</h4>
                <a asp-page="/Courses/Enrolled" class="btn btn-outline-primary btn-sm">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="row">
                @foreach (var course in Model.EnrolledCourses.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="position-relative" style="height: 180px; background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-indigo) 100%);">
                                <div class="d-flex align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100">
                                    <i class="bi bi-play-circle text-white display-4"></i>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(course.ThumbnailPath))
                                {
                                    <img src="@course.ThumbnailPath" class="card-img-top position-absolute top-0 start-0 w-100 h-100" alt="@course.Title" style="object-fit: cover;" onerror="this.style.display='none';">
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@course.Title</h5>
                                <div class="mb-2">
                                    @if (course.TotalReviews > 0)
                                    {
                                        <span class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(course.AverageRating))
                                                {
                                                    <i class="bi bi-star-fill" style="font-size: 0.85rem;"></i>
                                                }
                                                else if (i - 0.5 <= course.AverageRating)
                                                {
                                                    <i class="bi bi-star-half" style="font-size: 0.85rem;"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star" style="font-size: 0.85rem;"></i>
                                                }
                                            }
                                        </span>
                                        <span class="text-muted small ms-1">@course.AverageRating.ToString("0.0") (@course.TotalReviews)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small"><i class="bi bi-star me-1"></i>No reviews yet</span>
                                    }
                                </div>
                                <div class="progress mb-2" style="height: 20px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @(course.ProgressPercent)%;" aria-valuenow="@course.ProgressPercent" aria-valuemin="0" aria-valuemax="100">
                                        @course.ProgressPercent%
                                    </div>
                                </div>
                                <p class="card-text text-muted small">Progress: @course.ProgressPercent%</p>

                                <div class="mt-auto">
                                    @if (course.FirstIncompleteLessonId.HasValue)
                                    {
                                        <a href="/Lessons/View/@course.FirstIncompleteLessonId" class="btn btn-primary btn-sm d-block">
                                            <i class="bi bi-play-fill me-1"></i> Continue
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Courses/Details/@course.CourseId" class="btn btn-secondary btn-sm d-block">
                                            <i class="bi bi-eye me-1"></i> View Course
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info mt-5" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                You are not enrolled in any courses yet.
                <a asp-page="/Courses/Index" class="alert-link">Browse our course catalog</a> to get started!
            </div>
        }
    }
</div>
