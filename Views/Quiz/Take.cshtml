@model Learnly.ViewModels.QuizViewModel
@{
    ViewData["Title"] = "Take Quiz: " + Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <partial name="_HomeBreadcrumb" />
            @if (!string.IsNullOrEmpty(Model.ModuleTitle))
            {
                <li class="breadcrumb-item">@Model.ModuleTitle</li>
            }
            <li class="breadcrumb-item active" aria-current="page"><i class="bi bi-question-circle me-1"></i>Quiz</li>
        </ol>
    </nav>

    <h1>@ViewData["Title"]</h1>
    @if (!string.IsNullOrEmpty(Model.ModuleTitle))
    {
        <p class="text-muted">Module: @Model.ModuleTitle</p>
    }
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        You need to score at least <strong>70%</strong> to pass this quiz and unlock the next module.
    </div>
</div>

<form asp-controller="Quiz" asp-action="Submit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="AttemptId" value="@ViewBag.AttemptId" />

    <div class="card">
        <div class="card-body">
            @for (var i = 0; i < Model.Questions.Count; i++)
            {
                var question = Model.Questions[i];
                <div class="mb-4">
                    <h5>Question @(i + 1): @question.Text</h5>
                    <input type="hidden" name="Answers[@i].QuestionId" value="@question.Id" />

                    @if (question.Type == "MultipleChoice")
                    {
                        @for (var j = 0; j < question.Options.Count; j++)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@(i)].SelectedOptions" id="option_@(i)_@(j)" value="@question.Options[j]">
                                <label class="form-check-label" for="option_@(i)_@(j)">
                                    @question.Options[j]
                                </label>
                            </div>
                        }
                    }
                    else if (question.Type == "MultipleSelect")
                    {
                        @for (var j = 0; j < question.Options.Count; j++)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Answers[@(i)].SelectedOptions" id="option_@(i)_@(j)" value="@question.Options[j]">
                                <label class="form-check-label" for="option_@(i)_@(j)">
                                    @question.Options[j]
                                </label>
                            </div>
                        }
                    }
                    else if (question.Type == "ShortAnswer")
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" name="Answers[@(i)].Answer" placeholder="Your answer...">
                        </div>
                    }
                </div>
                <hr />
            }
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Submit Quiz</button>
    </div>
</form>
