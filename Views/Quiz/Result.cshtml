@model Learnly.ViewModels.GradeResultDto
@{
    ViewData["Title"] = "Quiz Result: " + Model.QuizTitle;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <partial name="_HomeBreadcrumb" />
            <li class="breadcrumb-item active" aria-current="page"><i class="bi bi-clipboard-check me-1"></i>Quiz Result</li>
        </ol>
    </nav>
    <div class="card text-center">
        <div class="card-header">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h3 class="card-title">Your Score: @Model.Score.ToString("0.##")%</h3>
            <p class="card-text">Passing Score: @Model.PassingScore%</p>

            @if (Model.Passed)
            {
                <div class="alert alert-success" role="alert">
                    <h4><i class="bi bi-check-circle me-2"></i>Congratulations, you passed!</h4>
                    @if (Model.UnlocksNextModule && !string.IsNullOrEmpty(Model.NextModuleTitle))
                    {
                        <p class="mb-0 mt-2">
                            <i class="bi bi-unlock me-1"></i>
                            You've unlocked the next module: <strong>@Model.NextModuleTitle</strong>
                        </p>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <h4><i class="bi bi-x-circle me-2"></i>You did not pass.</h4>
                    <p class="mb-0">Keep studying and try again! You need at least 70% to pass.</p>
                </div>
            }

            <hr />

            <h5>Question Breakdown:</h5>
            <ul class="list-group mb-3">
                @foreach (var feedback in Model.QuestionFeedbacks)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Question @feedback.QuestionId: @feedback.Message
                        @if (feedback.EarnedPoints > 0)
                        {
                            <span class="badge bg-success rounded-pill">@feedback.EarnedPoints/@feedback.PossiblePoints</span>
                        }
                        else
                        {
                            <span class="badge bg-danger rounded-pill">@feedback.EarnedPoints/@feedback.PossiblePoints</span>
                        }
                    </li>
                }
            </ul>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-center gap-2">
                @if (!Model.Passed)
                {
                    <a href="@Url.Action("Take", "Quiz", new { moduleId = Model.ModuleId })" class="btn btn-primary">
                        <i class="bi bi-arrow-repeat me-1"></i>Retake Quiz
                    </a>
                }
                else if (Model.UnlocksNextModule && Model.NextModuleId.HasValue)
                {
                    <a href="@Url.Page("/Courses/Details", new { id = Model.ModuleId })" class="btn btn-success">
                        <i class="bi bi-arrow-right me-1"></i>Continue to Next Module
                    </a>
                }
            </div>
        </div>
    </div>
</div>
