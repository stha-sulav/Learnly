@model Learnly.ViewModels.QuizViewModel?
@{
    ViewData["Title"] = "Manage Quiz";
    var moduleId = ViewBag.ModuleId as int? ?? 0;
    var moduleTitle = ViewBag.ModuleTitle as string ?? "Module";
    var courseId = ViewBag.CourseId as int? ?? 0;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Instructor/Courses/CourseList">Courses</a></li>
            <li class="breadcrumb-item"><a href="/Instructor/Courses/CourseEdit/@courseId">Edit Course</a></li>
            <li class="breadcrumb-item active" aria-current="page">Quiz</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Module Quiz</h1>
            <p class="text-muted mb-0">@moduleTitle</p>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-question-circle text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">No Quiz Created</h5>
                <p class="text-muted">This module doesn't have a quiz yet. Create one to test your students' knowledge.</p>
                <a href="/Instructor/Quiz/Create/@moduleId" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Create Quiz
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Model.Title</h5>
                <div class="btn-group">
                    <a href="/Instructor/Quiz/Edit/@Model.Id" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <form asp-action="Delete" asp-route-quizId="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this quiz? All questions will be lost.');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="moduleId" value="@moduleId" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-list-ol text-primary me-2"></i>
                            <div>
                                <small class="text-muted d-block">Questions</small>
                                <strong>@Model.Questions.Count</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-percent text-primary me-2"></i>
                            <div>
                                <small class="text-muted d-block">Passing Score</small>
                                <strong>70%</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="/Instructor/Quiz/ManageQuestions/@Model.Id" class="btn btn-primary">
                    <i class="bi bi-list-check me-1"></i>Manage Questions (@Model.Questions.Count)
                </a>
            </div>
        </div>
    }

    <div class="mt-4">
        <a href="/Instructor/Courses/CourseEdit/@courseId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Course
        </a>
    </div>
</div>
