@model Learnly.ViewModels.QuizEditViewModel
@{
    ViewData["Title"] = "Edit Quiz";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Instructor/Courses/CourseList">Courses</a></li>
            <li class="breadcrumb-item"><a href="/Instructor/Quiz/Manage/@Model.ModuleId">Quiz Management</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>

    <h1 class="mb-4">Edit Quiz</h1>
    <p class="text-muted">Module: @Model.ModuleTitle</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" asp-route-quizId="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ModuleId" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Quiz Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    The passing score is fixed at 70%. Students must score at least 70% to pass and unlock the next module.
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Save Changes
                    </button>
                    <a href="/Instructor/Quiz/Manage/@Model.ModuleId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
