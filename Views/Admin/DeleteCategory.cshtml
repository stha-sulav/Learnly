@model Learnly.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index"><i class="bi bi-shield-lock me-1"></i>Admin</a></li>
        <li class="breadcrumb-item"><a asp-action="Categories"><i class="bi bi-tags me-1"></i>Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page"><i class="bi bi-trash me-1"></i>Delete</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm mt-4 border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this category?
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Category Name</dt>
                    <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@(Model.Description ?? "No description")</dd>

                    @if (!string.IsNullOrEmpty(Model.ParentCategoryName))
                    {
                        <dt class="col-sm-4">Parent Category</dt>
                        <dd class="col-sm-8">@Model.ParentCategoryName</dd>
                    }

                    <dt class="col-sm-4">Courses</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.CourseCount > 0 ? "bg-danger" : "bg-success")">@Model.CourseCount</span>
                    </dd>
                </dl>

                @if (Model.CourseCount > 0)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i> <strong>Cannot delete!</strong> This category has @Model.CourseCount course(s) assigned to it.
                        Please reassign or delete the courses first.
                    </div>
                }

                <hr class="mt-4 mb-4" />
                <div class="d-flex justify-content-center gap-2">
                    @if (Model.CourseCount == 0)
                    {
                        <form asp-action="DeleteCategory" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger">Delete Category</button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger" disabled>Delete Category</button>
                    }
                    <a asp-action="Categories" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
