@model Learnly.ViewModels.ManageAccountViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly /> @* Email usually shouldn't be editable by admin directly *@
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureFile"></label>
                <input asp-for="ProfilePictureFile" type="file" class="form-control-file" accept="image/*" />
                <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                {
                    <div class="mt-2">
                        <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Users" class="btn btn-secondary">Back to Users</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
