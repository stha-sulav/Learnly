@model Learnly.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
    var categories = ViewBag.Categories as IEnumerable<Learnly.Models.Category>;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index"><i class="bi bi-shield-lock me-1"></i>Admin</a></li>
        <li class="breadcrumb-item"><a asp-action="Categories"><i class="bi bi-tags me-1"></i>Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page"><i class="bi bi-pencil me-1"></i>Edit</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="EditCategory" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description (optional)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ParentCategoryId" class="form-label"></label>
                        <select asp-for="ParentCategoryId" class="form-select">
                            <option value="">-- No Parent (Top Level) --</option>
                            @if (categories != null)
                            {
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id" selected="@(Model.ParentCategoryId == category.Id)">@category.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                    </div>

                    @if (Model.CourseCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> This category has <strong>@Model.CourseCount</strong> course(s) assigned to it.
                        </div>
                    }

                    <hr class="mt-4 mb-4" />
                    <div class="d-flex justify-content-center gap-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="Categories" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
