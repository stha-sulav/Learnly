@using Microsoft.AspNetCore.Identity
@using Learnly.Models
@using Learnly.Constants
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="d-flex align-items-center profile-display">
                    @if (!string.IsNullOrEmpty(user.ProfilePicturePath))
                    {
                        <img src="@user.ProfilePicturePath" alt="Profile Picture" class="rounded-circle me-2 profile-pic" style="width: 30px; height: 30px; object-fit: cover;" onerror="this.onerror=null;this.style.display='none'; this.closest('.dropdown-toggle').querySelector('.profile-icon-fallback').classList.remove('d-none');" />
                    }
                    <i class="bi bi-person me-2 profile-icon-fallback @(string.IsNullOrEmpty(user.ProfilePicturePath) ? "" : "d-none")" style="font-size: 1.2em;"></i>
                    @user!.FirstName
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                @if (User.IsInRole(Roles.User))
                {
                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                    <li><a class="dropdown-item" asp-page="/Courses/Index"><i class="bi bi-compass me-2"></i>Browse Courses</a></li>
                    <li><a class="dropdown-item" asp-page="/Courses/Enrolled"><i class="bi bi-bookmark-check me-2"></i>Enrolled Courses</a></li>
                }
                @if (User.IsInRole(Roles.Instructor))
                {
                    <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                    <li><a class="dropdown-item" asp-area="Instructor" asp-page="/Courses/CourseEdit"><i class="bi bi-plus-circle me-2"></i>Create New Course</a></li>
                    <li><a class="dropdown-item" asp-area="Instructor" asp-page="/Courses/CourseList"><i class="bi bi-journals me-2"></i>My Courses</a></li>
                }
                @if (User.IsInRole(Roles.Admin))
                {
                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Users"><i class="bi bi-people me-2"></i>Manage Users</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Categories"><i class="bi bi-tags me-2"></i>Manage Categories</a></li>
                }
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage"><i class="bi bi-gear me-2"></i>Manage Account</a></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login", new { area = "Identity" })">
                        <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#logoutConfirmModal"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </li>

        <!-- Logout Confirmation Modal -->
        <div class="modal fade" id="logoutConfirmModal" tabindex="-1" aria-labelledby="logoutConfirmModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="logoutConfirmModalLabel"><i class="bi bi-box-arrow-right me-2"></i>Confirm Logout</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to log out?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" onclick="document.getElementById('logoutForm').submit();">Logout</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/RegisterStudent">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

