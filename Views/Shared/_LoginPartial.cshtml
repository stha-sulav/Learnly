@using Microsoft.AspNetCore.Identity
@using Learnly.Models
@using Learnly.Constants
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="d-flex align-items-center profile-display">
                    @if (!string.IsNullOrEmpty(user.ProfilePicturePath))
                    {
                        <img src="@user.ProfilePicturePath" alt="Profile Picture" class="rounded-circle me-2 profile-pic" style="width: 30px; height: 30px; object-fit: cover;" onerror="this.onerror=null;this.style.display='none'; this.closest('.dropdown-toggle').querySelector('.profile-icon-fallback').classList.remove('d-none');" />
                    }
                    <i class="bi bi-person me-2 profile-icon-fallback @(string.IsNullOrEmpty(user.ProfilePicturePath) ? "" : "d-none")" style="font-size: 1.2em;"></i>
                    @user!.FirstName
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                @if (User.IsInRole(Roles.User))
                {
                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="MyCourses">My Courses</a></li>
                }
                @if (User.IsInRole(Roles.Instructor))
                {
                    <li><a class="dropdown-item" asp-area="" asp-controller="Instructor" asp-action="Index">Dashboard</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="MyCourses">My Courses</a></li>
                }
                @if (User.IsInRole(Roles.Admin))
                {
                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                }
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Manage Account</a></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/RegisterStudent">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

