@if (TempData["StatusMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showAlert('@Html.Raw(TempData["StatusMessage"].ToString().Replace("'", "\\'"))', 'success');
        });
    </script>
}
