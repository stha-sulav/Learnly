@using Learnly.Constants
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Learnly</title>
    <meta name="RequestVerificationToken" content="@antiforgery.GetAndStoreTokens(Context).RequestToken" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learnly.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div id="alert-container"></div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                @{
                    string homeController = "Home";
                    string homeAction = "Index";

                    if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole(Roles.Admin))
                        {
                            homeController = "Admin";
                            homeAction = "Index";
                        }
                        else if (User.IsInRole(Roles.Instructor))
                        {
                            homeController = "Instructor";
                            homeAction = "Index";
                        }
                        else if (User.IsInRole(Roles.User)) // Assuming default student role is "User"
                        {
                            homeController = "Home";
                            homeAction = "MyCourses"; // Default for students
                        }
                    }
                }
                <a class="navbar-brand" asp-area="" asp-controller="@homeController" asp-action="@homeAction">Learnly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-nav ms-auto">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex align-items-center">
                            @if (User.IsInRole(Roles.Instructor))
                            {
                                // The "Create Course" button was here and is now moved to the user dropdown.
                            }
                            <div class="nav-item dropdown">
                                <a class="nav-link" href="#" id="notificationBell" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell"></i>
                                    <span id="notificationCounter" class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle d-none"></span>
                                </a>
                                <ul id="notificationList" class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationBell">
                                    <li><a id="noNotificationsMessage" class="dropdown-item" href="#">No new notifications</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2025 - Learnly
            @if (!User.IsInRole(Roles.Admin))
            {
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ui-helpers.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
        <script src="~/js/notifications.js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
