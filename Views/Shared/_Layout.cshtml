@using Learnly.Constants
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Learnly</title>
    <meta name="RequestVerificationToken" content="@antiforgery.GetAndStoreTokens(Context).RequestToken" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learnly.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div id="alert-container"></div>
    @if (ViewData["HideNavFooter"] == null || !(bool)ViewData["HideNavFooter"])
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid px-4">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-brand d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-mortarboard-fill text-primary me-2" style="font-size: 1.5rem;"></i>
                            <span class="fw-bold" style="font-size: 1.25rem;">Learnly</span>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-mortarboard-fill text-primary me-2" style="font-size: 1.5rem;"></i>
                            <span class="fw-bold" style="font-size: 1.25rem;">Learnly</span>
                        </a>
                    }
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    @{
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
                        var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
                        var currentPage = ViewContext.RouteData.Values["page"]?.ToString()?.ToLower();
                        var currentArea = ViewContext.RouteData.Values["area"]?.ToString()?.ToLower();
                    }
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav ms-4">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                @if (User.IsInRole(Roles.User))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentController == "dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentPage == "/courses/index" ? "active" : "")" asp-page="/Courses/Index"><i class="bi bi-compass me-1"></i>Browse</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentPage == "/courses/enrolled" ? "active" : "")" asp-page="/Courses/Enrolled"><i class="bi bi-bookmark-check me-1"></i>Enrolled</a>
                                    </li>
                                }
                                @if (User.IsInRole(Roles.Instructor))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentController == "dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentArea == "instructor" && currentPage == "/courses/courseedit" ? "active" : "")" asp-area="Instructor" asp-page="/Courses/CourseEdit"><i class="bi bi-plus-circle me-1"></i>Create Course</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentArea == "instructor" && currentPage == "/courses/courselist" ? "active" : "")" asp-area="Instructor" asp-page="/Courses/CourseList"><i class="bi bi-journals me-1"></i>My Courses</a>
                                    </li>
                                }
                                @if (User.IsInRole(Roles.Admin))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentController == "admin" && currentAction == "index" ? "active" : "")" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentController == "admin" && currentAction == "users" ? "active" : "")" asp-controller="Admin" asp-action="Users"><i class="bi bi-people me-1"></i>Users</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link px-3 @(currentController == "admin" && currentAction == "categories" ? "active" : "")" asp-controller="Admin" asp-action="Categories"><i class="bi bi-tags me-1"></i>Categories</a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(currentController == "home" && currentAction == "index" ? "active" : "")" asp-controller="Home" asp-action="Index"><i class="bi bi-house me-1"></i>Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(currentPage == "/courses/index" ? "active" : "")" asp-page="/Courses/Index"><i class="bi bi-compass me-1"></i>Browse Courses</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav ms-auto align-items-center">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown me-2">
                                    <a class="nav-link position-relative" href="#" id="notificationBell" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-bell" style="font-size: 1.1rem;"></i>
                                        <span id="notificationCounter" class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle d-none" style="font-size: 0.65rem;"></span>
                                    </a>
                                    <ul id="notificationList" class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notificationBell">
                                        <li><a id="noNotificationsMessage" class="dropdown-item" href="#">No new notifications</a></li>
                                    </ul>
                                </li>
                            }
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @if (ViewData["HideNavFooter"] == null || !(bool)ViewData["HideNavFooter"])
    {
        <footer class="footer-main mt-auto">
            <div class="footer-top py-5">
                <div class="container">
                    <div class="row g-4">
                        <div class="col-lg-4 col-md-6">
                            <div class="footer-brand mb-3">
                                <a href="/" class="d-flex align-items-center text-decoration-none">
                                    <i class="bi bi-mortarboard-fill text-white me-2" style="font-size: 1.75rem;"></i>
                                    <span class="fw-bold text-white" style="font-size: 1.5rem;">Learnly</span>
                                </a>
                            </div>
                            <p class="text-white-50 mb-3">
                                Empowering learners worldwide with quality education. Start your learning journey today and unlock your potential.
                            </p>
                            <div class="social-links">
                                <a href="#" class="social-link me-2"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="social-link me-2"><i class="bi bi-twitter-x"></i></a>
                                <a href="#" class="social-link me-2"><i class="bi bi-linkedin"></i></a>
                                <a href="#" class="social-link me-2"><i class="bi bi-youtube"></i></a>
                                <a href="#" class="social-link"><i class="bi bi-instagram"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-6">
                            <h6 class="text-white fw-bold mb-3">Explore</h6>
                            <ul class="list-unstyled footer-links">
                                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                @if (User.Identity == null || !User.Identity.IsAuthenticated || User.IsInRole("User"))
                                {
                                    <li><a asp-page="/Courses/Index">Browse Courses</a></li>
                                }
                                @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                                }
                                @if (User.IsInRole("Instructor"))
                                {
                                    <li><a asp-area="Instructor" asp-page="/Courses/CourseList">My Courses</a></li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-area="Admin" asp-page="/Index">Admin Panel</a></li>
                                }
                            </ul>
                        </div>
                        <div class="col-lg-2 col-md-6">
                            <h6 class="text-white fw-bold mb-3">Get Started</h6>
                            <ul class="list-unstyled footer-links">
                                @if (User.Identity == null || !User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-area="Identity" asp-page="/Account/RegisterStudent">Sign Up</a></li>
                                    <li><a asp-area="Identity" asp-page="/Account/Login">Log In</a></li>
                                    <li><a asp-area="Identity" asp-page="/Account/RegisterInstructor">Become Instructor</a></li>
                                }
                                else if (User.IsInRole("User"))
                                {
                                    <li><a asp-controller="Account" asp-action="Manage">My Account</a></li>
                                    <li><a asp-page="/Courses/Enrolled">My Learning</a></li>
                                }
                                else if (User.IsInRole("Instructor"))
                                {
                                    <li><a asp-controller="Account" asp-action="Manage">My Account</a></li>
                                    <li><a asp-area="Instructor" asp-page="/Courses/CourseEdit">Create Course</a></li>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-controller="Account" asp-action="Manage">My Account</a></li>
                                }
                            </ul>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <h6 class="text-white fw-bold mb-3">Contact Us</h6>
                            <ul class="list-unstyled footer-contact">
                                <li class="d-flex align-items-start mb-2">
                                    <i class="bi bi-envelope me-2 mt-1"></i>
                                    <span>support@learnly.com</span>
                                </li>
                                <li class="d-flex align-items-start mb-2">
                                    <i class="bi bi-geo-alt me-2 mt-1"></i>
                                    <span>123 Learning Street, Education City</span>
                                </li>
                                <li class="d-flex align-items-start">
                                    <i class="bi bi-telephone me-2 mt-1"></i>
                                    <span>+1 (555) 123-4567</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom py-3">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-6 text-center text-md-start">
                            <span class="text-white-50 small">&copy; @DateTime.Now.Year Learnly. All rights reserved.</span>
                        </div>
                        <div class="col-md-6 text-center text-md-end mt-2 mt-md-0">
                            <a href="#" class="footer-bottom-link">Privacy Policy</a>
                            <span class="text-white-50 mx-2">|</span>
                            <a href="#" class="footer-bottom-link">Terms of Service</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <style>
            .footer-main {
                background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            }
            .footer-top {
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }
            .social-link {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 36px;
                height: 36px;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
                color: #fff;
                text-decoration: none;
                transition: all 0.3s ease;
            }
            .social-link:hover {
                background: var(--bs-primary);
                color: #fff;
                transform: translateY(-3px);
            }
            .footer-links li {
                margin-bottom: 0.5rem;
            }
            .footer-links a {
                color: rgba(255, 255, 255, 0.6);
                text-decoration: none;
                transition: color 0.3s ease;
            }
            .footer-links a:hover {
                color: #fff;
            }
            .footer-contact {
                color: rgba(255, 255, 255, 0.6);
            }
            .footer-contact i {
                color: var(--bs-primary);
            }
            .footer-bottom-link {
                color: rgba(255, 255, 255, 0.6);
                text-decoration: none;
                font-size: 0.875rem;
                transition: color 0.3s ease;
            }
            .footer-bottom-link:hover {
                color: #fff;
            }
        </style>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ui-helpers.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/password-toggle.js" asp-append-version="true"></script>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
        <script src="~/js/notifications.js" asp-append-version="true"></script>
    }
    <partial name="_StatusMessage" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
