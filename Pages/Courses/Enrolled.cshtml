@page
@model Learnly.Pages.Courses.EnrolledModel
@{
    ViewData["Title"] = "My Enrolled Courses";
    var hasActiveFilters = !string.IsNullOrWhiteSpace(Model.SearchTerm) || !string.IsNullOrWhiteSpace(Model.ProgressStatus);
    var courseCount = Model.FilteredCourses?.Count() ?? 0;
    var totalCount = Model.EnrolledCourses?.Count() ?? 0;
}

<div class="container-fluid mt-4 px-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <partial name="_HomeBreadcrumb" />
            <li class="breadcrumb-item active" aria-current="page"><i class="bi bi-bookmark-check me-1"></i>Enrolled Courses</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-bookmark-check me-2"></i>My Enrolled Courses</h1>
        <span class="text-muted">@courseCount of @totalCount courses</span>
    </div>

    @if (Model.EnrolledCourses == null || !Model.EnrolledCourses.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>You haven't enrolled in any courses yet.
            <a asp-page="/Courses/Index" class="alert-link">Browse courses</a> to get started!
        </div>
    }
    else
    {
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="filter-sidebar">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <i class="bi bi-funnel me-2"></i>Filter Courses
                        </div>
                        <div class="card-body">
                            <form method="get" id="filterForm">
                                <div class="mb-3">
                                    <label for="SearchTerm" class="form-label">
                                        <i class="bi bi-search me-1"></i>Search
                                    </label>
                                    <input type="text" class="form-control" id="SearchTerm" name="SearchTerm"
                                           value="@Model.SearchTerm" placeholder="Search enrolled courses...">
                                </div>
                                <div class="mb-3">
                                    <label for="ProgressStatus" class="form-label">
                                        <i class="bi bi-bar-chart me-1"></i>Progress Status
                                    </label>
                                    <select class="form-select" id="ProgressStatus" name="ProgressStatus">
                                        <option value="">All Status</option>
                                        <option value="not_started" selected="@(Model.ProgressStatus == "not_started")">Not Started</option>
                                        <option value="in_progress" selected="@(Model.ProgressStatus == "in_progress")">In Progress</option>
                                        <option value="completed" selected="@(Model.ProgressStatus == "completed")">Completed</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="SortBy" class="form-label">
                                        <i class="bi bi-sort-down me-1"></i>Sort By
                                    </label>
                                    <select class="form-select" id="SortBy" name="SortBy">
                                        <option value="progress_desc" selected="@(Model.SortBy == "progress_desc" || string.IsNullOrEmpty(Model.SortBy))">Progress (High to Low)</option>
                                        <option value="progress_asc" selected="@(Model.SortBy == "progress_asc")">Progress (Low to High)</option>
                                        <option value="title_asc" selected="@(Model.SortBy == "title_asc")">Title (A-Z)</option>
                                        <option value="title_desc" selected="@(Model.SortBy == "title_desc")">Title (Z-A)</option>
                                    </select>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-filter">
                                        <i class="bi bi-funnel-fill me-1"></i>Apply Filters
                                    </button>
                                    @if (hasActiveFilters)
                                    {
                                        <a href="/Courses/Enrolled" class="btn btn-outline-secondary btn-reset">
                                            <i class="bi bi-arrow-counterclockwise me-1"></i>Reset Filters
                                        </a>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9 col-md-8">
                @if (Model.FilteredCourses == null || !Model.FilteredCourses.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        No courses match your filters. <a href="/Courses/Enrolled" class="alert-link">Clear filters</a> to see all enrolled courses.
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var course in Model.FilteredCourses)
                        {
                            <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
                                <div class="card h-100 shadow-sm border-0 course-card enrolled-card" style="cursor: pointer;" onclick="window.location.href='/Courses/Details/@course.CourseId'">
                                    <div class="position-relative course-card-header-enrolled">
                                        <!-- Enrolled badge -->
                                        <span class="badge bg-success position-absolute top-0 end-0 m-2 z-1"><i class="bi bi-check-circle me-1"></i>Enrolled</span>
                                        <!-- Default placeholder -->
                                        <div class="d-flex align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100">
                                            <i class="bi bi-play-circle text-white" style="font-size: 4rem;"></i>
                                        </div>
                                        <!-- Thumbnail image -->
                                        @if (!string.IsNullOrWhiteSpace(course.ThumbnailPath))
                                        {
                                            <img src="@course.ThumbnailPath" class="card-img-top position-absolute top-0 start-0 w-100 h-100" alt="@course.Title" style="object-fit: cover;" onerror="this.style.display='none';">
                                        }
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title mb-2">@course.Title</h5>

                                        <div class="mb-2">
                                            @if (course.TotalReviews > 0)
                                            {
                                                <span class="text-warning">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Floor(course.AverageRating))
                                                        {
                                                            <i class="bi bi-star-fill" style="font-size: 0.85rem;"></i>
                                                        }
                                                        else if (i - 0.5 <= course.AverageRating)
                                                        {
                                                            <i class="bi bi-star-half" style="font-size: 0.85rem;"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star" style="font-size: 0.85rem;"></i>
                                                        }
                                                    }
                                                </span>
                                                <span class="text-muted small ms-1">@course.AverageRating.ToString("0.0") (@course.TotalReviews)</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small"><i class="bi bi-star me-1"></i>No reviews yet</span>
                                            }
                                        </div>

                                        <!-- Progress Bar -->
                                        <div class="mb-2">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <small class="text-muted">Progress</small>
                                                <small class="fw-bold text-success">@course.ProgressPercent%</small>
                                            </div>
                                            <div class="progress" style="height: 10px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: @course.ProgressPercent%;" aria-valuenow="@course.ProgressPercent" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>

                                        @if (course.FirstIncompleteLessonTitle != null)
                                        {
                                            <p class="text-muted small mb-3">
                                                <i class="bi bi-play-circle me-1"></i>Next: @course.FirstIncompleteLessonTitle
                                            </p>
                                        }

                                        <!-- Action Button -->
                                        <div class="mt-auto" onclick="event.stopPropagation();">
                                            @if (course.ProgressPercent == 100)
                                            {
                                                <a href="/Courses/Details/@course.CourseId" class="btn btn-outline-success btn-sm w-100">
                                                    <i class="bi bi-trophy me-1"></i>Completed - Review Course
                                                </a>
                                            }
                                            else if (course.FirstIncompleteLessonId.HasValue)
                                            {
                                                <a href="/Lessons/View/@course.FirstIncompleteLessonId" class="btn btn-success btn-sm w-100">
                                                    <i class="bi bi-play-fill me-1"></i>Continue Learning
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="/Courses/Details/@course.CourseId" class="btn btn-outline-success btn-sm w-100">
                                                    <i class="bi bi-eye me-1"></i>View Course
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <style>
        .course-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(var(--bs-dark-rgb), 0.15) !important;
        }
        .enrolled-card {
            border-left: 4px solid var(--bs-success) !important;
        }
        .course-card-header-enrolled {
            height: 180px;
            background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-indigo) 100%);
        }
    </style>
}
