@page "{id:int}"
@model Learnly.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = Model.Course?.Title ?? "Course Details";
}

@if (Model.Course == null)
{
    <div class="container mt-4">
        <a href="/Courses/Enrolled" class="btn btn-outline-secondary btn-sm mb-3">
            <i class="bi bi-arrow-left me-1"></i>Back to Enrolled Courses
        </a>
        <div class="alert alert-warning" role="alert">
            Course not found.
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <a href="/Courses/Enrolled" class="btn btn-outline-secondary btn-sm mb-3">
            <i class="bi bi-arrow-left me-1"></i>Back to Enrolled Courses
        </a>

        <div class="row">
            <div class="col-lg-8">
                <div class="position-relative rounded mb-4 overflow-hidden" style="height: 300px; width: 100%; background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-indigo) 100%);">
                    <div class="d-flex align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100">
                        <i class="bi bi-play-circle text-white" style="font-size: 6rem;"></i>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.Course.ThumbnailPath))
                    {
                        <img src="@Model.Course.ThumbnailPath" class="position-absolute top-0 start-0 w-100 h-100" alt="@Model.Course.Title" style="object-fit: cover;" onerror="this.style.display='none';">
                    }
                </div>
                <h1>@Model.Course.Title</h1>
                <p class="lead text-muted">By @Model.Course.InstructorName</p>

                <div class="d-grid gap-2 mb-4">
                    @if (Model.Course.IsEnrolled)
                    {
                        <button class="btn btn-success btn-lg" disabled><i class="bi bi-check-circle-fill me-2"></i> Enrolled</button>
                    }
                    else
                    {
                        <button id="enroll-button" class="btn btn-primary btn-lg">Enroll Now</button>
                    }
                </div>

                <!-- Reviews Summary -->
                <div class="d-flex align-items-center mb-4">
                    <div class="me-3">
                        <span class="display-6 fw-bold text-primary">@Model.Course.AverageRating.ToString("0.0")</span>
                    </div>
                    <div>
                        <div class="text-warning mb-1">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Floor(Model.Course.AverageRating))
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else if (i - 0.5 <= Model.Course.AverageRating)
                                {
                                    <i class="bi bi-star-half"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </div>
                        <small class="text-muted">@Model.Course.TotalReviews review(s)</small>
                    </div>
                </div>

                <h2 class="mt-5 mb-3">Course Curriculum</h2>
                <div class="accordion" id="courseModulesAccordion">
                    @foreach (var module in Model.Course.Modules.OrderBy(m => m.Order))
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@module.Id">
                                <button class="accordion-button @(module.Order == 1 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@module.Id" aria-expanded="@(module.Order == 1 ? "true" : "false")" aria-controls="collapse-@module.Id">
                                    @if (!string.IsNullOrEmpty(module.ThumbnailPath))
                                    {
                                        <img src="@module.ThumbnailPath" alt="@module.Title" class="me-2 rounded" style="width: 40px; height: 30px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 30px;">
                                            <i class="bi bi-layers text-white"></i>
                                        </div>
                                    }
                                    @module.Order. @module.Title
                                </button>
                            </h2>
                            <div id="collapse-@module.Id" class="accordion-collapse collapse @(module.Order == 1 ? "show" : "")" aria-labelledby="heading-@module.Id" data-bs-parent="#courseModulesAccordion">
                                <div class="accordion-body">
                                    <ul class="list-group list-group-flush">
                                        @foreach (var lesson in module.Lessons.OrderBy(l => l.Order))
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(lesson.ThumbnailPath))
                                                    {
                                                        <img src="@lesson.ThumbnailPath" alt="@lesson.Title" class="me-2 rounded" style="width: 32px; height: 24px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 24px;">
                                                            <i class="bi bi-book text-white" style="font-size: 0.75rem;"></i>
                                                        </div>
                                                    }
                                                    <a href="/Lessons/View/@lesson.Id" class="text-decoration-none @(lesson.IsCompleted ? "text-success" : "")">
                                                        @lesson.Order. @lesson.Title
                                                    </a>
                                                </div>
                                                <div>
                                                    <span class="badge bg-secondary me-2">@TimeSpan.FromSeconds(lesson.DurationSeconds).ToString(@"mm\:ss")</span>
                                                    @if (lesson.IsCompleted)
                                                    {
                                                        <i class="bi bi-check-circle-fill text-success"></i>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Reviews Section -->
                <h2 class="mt-5 mb-3"><i class="bi bi-chat-square-text me-2"></i>Reviews</h2>

                @if (Model.Course.IsEnrolled)
                {
                    <div class="card shadow-sm mb-4" id="review-form-card">
                        <div class="card-body">
                            @if (Model.Course.CurrentUserReview != null)
                            {
                                <h5 class="card-title mb-3">Your Review</h5>
                                <div id="user-review-display">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="text-warning" id="user-rating-display">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi @(i <= Model.Course.CurrentUserReview.Rating ? "bi-star-fill" : "bi-star")"></i>
                                            }
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-1" id="edit-review-btn">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" id="delete-review-btn">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                    <p class="mb-0 text-muted" id="user-comment-display">@(Model.Course.CurrentUserReview.Comment ?? "No comment provided.")</p>
                                </div>
                                <div id="edit-review-form" style="display: none;">
                                    <div class="mb-3">
                                        <label class="form-label">Rating</label>
                                        <div class="star-rating" id="edit-star-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star star-input" data-rating="@i" style="font-size: 1.5rem; cursor: pointer;"></i>
                                            }
                                        </div>
                                        <input type="hidden" id="edit-rating-value" value="@Model.Course.CurrentUserReview.Rating">
                                    </div>
                                    <div class="mb-3">
                                        <label for="edit-review-comment" class="form-label">Comment (Optional)</label>
                                        <textarea class="form-control" id="edit-review-comment" rows="3" maxlength="1000">@Model.Course.CurrentUserReview.Comment</textarea>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary" id="save-review-btn">Save Changes</button>
                                        <button class="btn btn-outline-secondary" id="cancel-edit-btn">Cancel</button>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <h5 class="card-title mb-3">Write a Review</h5>
                                <div class="mb-3">
                                    <label class="form-label">Rating</label>
                                    <div class="star-rating" id="new-star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star star-input" data-rating="@i" style="font-size: 1.5rem; cursor: pointer;"></i>
                                        }
                                    </div>
                                    <input type="hidden" id="new-rating-value" value="0">
                                </div>
                                <div class="mb-3">
                                    <label for="new-review-comment" class="form-label">Comment (Optional)</label>
                                    <textarea class="form-control" id="new-review-comment" rows="3" maxlength="1000" placeholder="Share your experience with this course..."></textarea>
                                </div>
                                <button class="btn btn-primary" id="submit-review-btn">Submit Review</button>
                            }
                        </div>
                    </div>
                }

                <div id="reviews-list">
                    @if (Model.Course.Reviews.Any())
                    {
                        @foreach (var review in Model.Course.Reviews.Where(r => !r.IsCurrentUserReview))
                        {
                            <div class="card shadow-sm mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <strong>@review.UserName</strong>
                                            <div class="text-warning">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi @(i <= review.Rating ? "bi-star-fill" : "bi-star")" style="font-size: 0.85rem;"></i>
                                                }
                                            </div>
                                        </div>
                                        <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(review.Comment))
                                    {
                                        <p class="mb-0 text-muted">@review.Comment</p>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else if (!Model.Course.IsEnrolled || Model.Course.CurrentUserReview == null)
                    {
                        <div class="text-muted text-center py-4">
                            <i class="bi bi-chat-square-text" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">No reviews yet. Be the first to review this course!</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm mt-4 mt-lg-0">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Course Information</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-person-circle me-2 text-primary"></i>Instructor</span>
                                <strong>@Model.Course.InstructorName</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-clock me-2 text-primary"></i>Duration</span>
                                <strong>@Model.Course.TotalDurationFormatted</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-collection me-2 text-primary"></i>Modules</span>
                                <strong>@Model.Course.TotalModules</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-play-btn me-2 text-primary"></i>Lessons</span>
                                <strong>@Model.Course.TotalLessons</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-people me-2 text-primary"></i>Students</span>
                                <strong>@Model.Course.EnrolledStudents</strong>
                            </li>
                            @if (!string.IsNullOrEmpty(Model.Course.CategoryName))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-tag me-2 text-primary"></i>Category</span>
                                    <strong>@Model.Course.CategoryName</strong>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-bookmark-check me-2 text-primary"></i>Status</span>
                                @if (Model.Course.IsEnrolled)
                                {
                                    <span class="badge bg-success">Enrolled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Enrolled</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Course.Description))
                {
                    <div class="card shadow-sm mt-3">
                        <div class="card-body">
                            <h5 class="card-title mb-3"><i class="bi bi-info-circle me-2"></i>About this Course</h5>
                            <p class="card-text text-muted">@Model.Course.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    @if (Model.Course != null)
    {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const enrollButton = document.getElementById('enroll-button');
            if (enrollButton) {
                enrollButton.addEventListener('click', async function () {
                    const courseId = @Model.Course.Id;

                    // Check if user is authenticated by looking for CSRF token
                    const csrfTokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (!csrfTokenElement) {
                        const returnUrl = encodeURIComponent(window.location.pathname);
                        window.location.href = `/Identity/Account/Login?ReturnUrl=${returnUrl}`;
                        return;
                    }

                    try {
                        const response = await fetch(`/api/courses/${courseId}/enroll`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': csrfTokenElement.value
                            }
                        });

                        if (response.ok) {
                            showAlert('Successfully enrolled in the course!', 'success');
                            // Update the UI to show "Enrolled" state
                            enrollButton.disabled = true;
                            enrollButton.classList.remove('btn-primary');
                            enrollButton.classList.add('btn-success');
                            enrollButton.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i> Enrolled';
                            // Reload after a short delay to let user see the toast
                            setTimeout(() => location.reload(), 1500);
                        } else if (response.status === 409) {
                            showAlert('You are already enrolled in this course.', 'info');
                            enrollButton.disabled = true;
                            enrollButton.classList.remove('btn-primary');
                            enrollButton.classList.add('btn-success');
                            enrollButton.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i> Enrolled';
                        }
                        else if (response.status === 401) {
                            const returnUrl = encodeURIComponent(window.location.pathname);
                            window.location.href = `/Identity/Account/Login?ReturnUrl=${returnUrl}`;
                        }
                        else {
                            showAlert('Failed to enroll in the course. Please try again.', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('An error occurred during enrollment.', 'error');
                    }
                });
            }

            // Review functionality
            const courseId = @Model.Course.Id;
            const csrfToken = document.querySelector('meta[name="RequestVerificationToken"]')?.content;
            const userReviewId = @(Model.Course.CurrentUserReview?.Id ?? 0);

            // Star rating functionality
            function setupStarRating(containerId, inputId) {
                const container = document.getElementById(containerId);
                const input = document.getElementById(inputId);
                if (!container || !input) return;

                const stars = container.querySelectorAll('.star-input');
                const initialRating = parseInt(input.value) || 0;

                // Set initial state
                updateStars(stars, initialRating);

                stars.forEach(star => {
                    star.addEventListener('mouseenter', function() {
                        const rating = parseInt(this.dataset.rating);
                        updateStars(stars, rating);
                    });

                    star.addEventListener('mouseleave', function() {
                        const currentRating = parseInt(input.value) || 0;
                        updateStars(stars, currentRating);
                    });

                    star.addEventListener('click', function() {
                        const rating = parseInt(this.dataset.rating);
                        input.value = rating;
                        updateStars(stars, rating);
                    });
                });
            }

            function updateStars(stars, rating) {
                stars.forEach(star => {
                    const starRating = parseInt(star.dataset.rating);
                    if (starRating <= rating) {
                        star.classList.remove('bi-star');
                        star.classList.add('bi-star-fill');
                        star.style.color = '#ffc107';
                    } else {
                        star.classList.remove('bi-star-fill');
                        star.classList.add('bi-star');
                        star.style.color = '#6c757d';
                    }
                });
            }

            // Initialize star ratings
            setupStarRating('new-star-rating', 'new-rating-value');
            setupStarRating('edit-star-rating', 'edit-rating-value');

            // Submit new review
            const submitBtn = document.getElementById('submit-review-btn');
            if (submitBtn) {
                submitBtn.addEventListener('click', async function() {
                    const rating = parseInt(document.getElementById('new-rating-value').value);
                    const comment = document.getElementById('new-review-comment').value.trim();

                    if (rating < 1 || rating > 5) {
                        showAlert('Please select a rating between 1 and 5 stars.', 'warning');
                        return;
                    }

                    try {
                        const response = await fetch('/api/review', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': csrfToken
                            },
                            body: JSON.stringify({ courseId, rating, comment: comment || null })
                        });

                        if (response.ok) {
                            showAlert('Review submitted successfully!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else if (response.status === 409) {
                            showAlert('You have already reviewed this course.', 'info');
                        } else {
                            const error = await response.json();
                            showAlert(error.message || 'Failed to submit review.', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('An error occurred while submitting the review.', 'error');
                    }
                });
            }

            // Edit review functionality
            const editBtn = document.getElementById('edit-review-btn');
            const cancelEditBtn = document.getElementById('cancel-edit-btn');
            const saveBtn = document.getElementById('save-review-btn');
            const deleteBtn = document.getElementById('delete-review-btn');
            const reviewDisplay = document.getElementById('user-review-display');
            const editForm = document.getElementById('edit-review-form');

            if (editBtn) {
                editBtn.addEventListener('click', function() {
                    reviewDisplay.style.display = 'none';
                    editForm.style.display = 'block';
                    // Re-initialize stars with current value
                    const currentRating = parseInt(document.getElementById('edit-rating-value').value);
                    updateStars(document.querySelectorAll('#edit-star-rating .star-input'), currentRating);
                });
            }

            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', function() {
                    editForm.style.display = 'none';
                    reviewDisplay.style.display = 'block';
                });
            }

            if (saveBtn) {
                saveBtn.addEventListener('click', async function() {
                    const rating = parseInt(document.getElementById('edit-rating-value').value);
                    const comment = document.getElementById('edit-review-comment').value.trim();

                    if (rating < 1 || rating > 5) {
                        showAlert('Please select a rating between 1 and 5 stars.', 'warning');
                        return;
                    }

                    try {
                        const response = await fetch(`/api/review/${userReviewId}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': csrfToken
                            },
                            body: JSON.stringify({ rating, comment: comment || null })
                        });

                        if (response.ok) {
                            showAlert('Review updated successfully!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showAlert('Failed to update review.', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('An error occurred while updating the review.', 'error');
                    }
                });
            }

            if (deleteBtn) {
                deleteBtn.addEventListener('click', async function() {
                    if (!confirm('Are you sure you want to delete your review?')) {
                        return;
                    }

                    try {
                        const response = await fetch(`/api/review/${userReviewId}`, {
                            method: 'DELETE',
                            headers: {
                                'RequestVerificationToken': csrfToken
                            }
                        });

                        if (response.ok) {
                            showAlert('Review deleted successfully!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showAlert('Failed to delete review.', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('An error occurred while deleting the review.', 'error');
                    }
                });
            }
        });
    </script>
    }
}