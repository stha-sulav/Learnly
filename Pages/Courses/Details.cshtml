@page "{id:int}"
@model Learnly.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = Model.Course?.Title ?? "Course Details";
}

@if (Model.Course == null)
{
    <div class="container mt-4">
        <a href="/Courses/Enrolled" class="btn btn-outline-secondary btn-sm mb-3">
            <i class="bi bi-arrow-left me-1"></i>Back to Enrolled Courses
        </a>
        <div class="alert alert-warning" role="alert">
            Course not found.
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <a href="/Courses/Enrolled" class="btn btn-outline-secondary btn-sm mb-3">
            <i class="bi bi-arrow-left me-1"></i>Back to Enrolled Courses
        </a>

        <div class="row">
            <div class="col-lg-8">
                <div class="position-relative rounded mb-4 overflow-hidden" style="height: 300px; width: 100%; background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-indigo) 100%);">
                    <div class="d-flex align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100">
                        <i class="bi bi-play-circle text-white" style="font-size: 6rem;"></i>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.Course.ThumbnailPath))
                    {
                        <img src="@Model.Course.ThumbnailPath" class="position-absolute top-0 start-0 w-100 h-100" alt="@Model.Course.Title" style="object-fit: cover;" onerror="this.style.display='none';">
                    }
                </div>
                <h1>@Model.Course.Title</h1>
                <p class="lead text-muted">By @Model.Course.InstructorName</p>

                <div class="d-grid gap-2 mb-4">
                    @if (Model.Course.IsEnrolled)
                    {
                        <button class="btn btn-success btn-lg" disabled><i class="bi bi-check-circle-fill me-2"></i> Enrolled</button>
                    }
                    else
                    {
                        <button id="enroll-button" class="btn btn-primary btn-lg">Enroll Now</button>
                    }
                </div>

                <h2 class="mt-5 mb-3">Course Curriculum</h2>
                <div class="accordion" id="courseModulesAccordion">
                    @foreach (var module in Model.Course.Modules.OrderBy(m => m.Order))
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-@module.Id">
                                <button class="accordion-button @(module.Order == 1 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@module.Id" aria-expanded="@(module.Order == 1 ? "true" : "false")" aria-controls="collapse-@module.Id">
                                    @if (!string.IsNullOrEmpty(module.ThumbnailPath))
                                    {
                                        <img src="@module.ThumbnailPath" alt="@module.Title" class="me-2 rounded" style="width: 40px; height: 30px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 30px;">
                                            <i class="bi bi-layers text-white"></i>
                                        </div>
                                    }
                                    @module.Order. @module.Title
                                </button>
                            </h2>
                            <div id="collapse-@module.Id" class="accordion-collapse collapse @(module.Order == 1 ? "show" : "")" aria-labelledby="heading-@module.Id" data-bs-parent="#courseModulesAccordion">
                                <div class="accordion-body">
                                    <ul class="list-group list-group-flush">
                                        @foreach (var lesson in module.Lessons.OrderBy(l => l.Order))
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(lesson.ThumbnailPath))
                                                    {
                                                        <img src="@lesson.ThumbnailPath" alt="@lesson.Title" class="me-2 rounded" style="width: 32px; height: 24px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 24px;">
                                                            <i class="bi bi-book text-white" style="font-size: 0.75rem;"></i>
                                                        </div>
                                                    }
                                                    <a href="/Lessons/View/@lesson.Id" class="text-decoration-none @(lesson.IsCompleted ? "text-success" : "")">
                                                        @lesson.Order. @lesson.Title
                                                    </a>
                                                </div>
                                                <div>
                                                    <span class="badge bg-secondary me-2">@TimeSpan.FromSeconds(lesson.DurationSeconds).ToString(@"mm\:ss")</span>
                                                    @if (lesson.IsCompleted)
                                                    {
                                                        <i class="bi bi-check-circle-fill text-success"></i>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm mt-4 mt-lg-0">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Course Information</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-person-circle me-2 text-primary"></i>Instructor</span>
                                <strong>@Model.Course.InstructorName</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-clock me-2 text-primary"></i>Duration</span>
                                <strong>@Model.Course.TotalDurationFormatted</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-collection me-2 text-primary"></i>Modules</span>
                                <strong>@Model.Course.TotalModules</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-play-btn me-2 text-primary"></i>Lessons</span>
                                <strong>@Model.Course.TotalLessons</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-people me-2 text-primary"></i>Students</span>
                                <strong>@Model.Course.EnrolledStudents</strong>
                            </li>
                            @if (!string.IsNullOrEmpty(Model.Course.CategoryName))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-tag me-2 text-primary"></i>Category</span>
                                    <strong>@Model.Course.CategoryName</strong>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-bookmark-check me-2 text-primary"></i>Status</span>
                                @if (Model.Course.IsEnrolled)
                                {
                                    <span class="badge bg-success">Enrolled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Enrolled</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Course.Description))
                {
                    <div class="card shadow-sm mt-3">
                        <div class="card-body">
                            <h5 class="card-title mb-3"><i class="bi bi-info-circle me-2"></i>About this Course</h5>
                            <p class="card-text text-muted">@Model.Course.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    @if (Model.Course != null)
    {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const enrollButton = document.getElementById('enroll-button');
            if (enrollButton) {
                enrollButton.addEventListener('click', async function () {
                    const courseId = @Model.Course.Id;
                    try {
                        const response = await fetch(`/api/courses/${courseId}/enroll`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value // If CSRF token is used
                            }
                        });

                        if (response.ok) {
                            showAlert('Successfully enrolled in the course!', 'success');
                            // Update the UI to show "Enrolled" state
                            enrollButton.disabled = true;
                            enrollButton.classList.remove('btn-primary');
                            enrollButton.classList.add('btn-success');
                            enrollButton.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i> Enrolled';
                            // Reload after a short delay to let user see the toast
                            setTimeout(() => location.reload(), 1500);
                        } else if (response.status === 409) {
                            showAlert('You are already enrolled in this course.', 'info');
                            enrollButton.disabled = true;
                            enrollButton.classList.remove('btn-primary');
                            enrollButton.classList.add('btn-success');
                            enrollButton.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i> Enrolled';
                        }
                        else if (response.status === 401) {
                            showAlert('Please log in to enroll in the course.', 'warning');
                            setTimeout(() => window.location.href = '/Identity/Account/Login', 1500);
                        }
                        else {
                            showAlert('Failed to enroll in the course. Please try again.', 'error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('An error occurred during enrollment.', 'error');
                    }
                });
            }
        });
    </script>
    }
}