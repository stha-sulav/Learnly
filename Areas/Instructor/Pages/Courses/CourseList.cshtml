@page
@model Learnly.Areas.Instructor.Pages.Courses.CourseListModel
@{
    ViewData["Title"] = "My Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Courses</h1>
        <a asp-area="Instructor" asp-page="/Courses/CourseEdit" class="btn btn-primary">Create New Course</a>
    </div>

    @if (Model.Courses == null || !Model.Courses.Any())
    {
        <div class="alert alert-info" role="alert">
            You haven't created any courses yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@course.ThumbnailPath" class="card-img-top" alt="@course.Title Thumbnail" style="height: 180px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text text-muted">@course.ShortDescription</p>
                            <div class="mt-auto">
                                <a asp-area="Instructor" asp-page="/Courses/CourseEdit" asp-route-id="@course.Id" class="btn btn-secondary btn-sm me-2">Edit</a>
                                <a asp-area="Instructor" asp-page="/Modules/ModuleList" asp-route-courseId="@course.Id" class="btn btn-info btn-sm">Manage Modules</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
